<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.budgetmanagementsystem">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BudgetManagementSystem"
        android:requestLegacyExternalStorage="true">
        <activity android:name=".Transaction.MonthPickerViewTransactionActivity"></activity>
        <activity android:name=".Transaction.ViewTransactionActivity" />
        <activity android:name=".Transaction.TransactionDateActivity" />
        <activity android:name=".Transaction.AddTransactionActivity" />
        <activity android:name=".Budget.AddBudgetActivity" />
        <activity android:name=".Category.AddCategoryActivity" />
        <activity android:name=".Category.ViewCategoryActivity" />
        <activity
            android:name=".Activities.HomePageActivity"
            android:theme="@style/Theme.BudgetManagementSystem.NoActionBar" />
        <activity android:name=".Activities.SignInActivity" />
        <activity android:name=".Activities.SignUpActivity" />
        <activity android:name=".Activities.SplashScreen" />
        <activity android:name=".Activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>